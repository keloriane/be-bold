<section id="testimonials">
  <div class="container-wrapper">
    <div class="title-container">
      <h3 class="sf blue">Ils parlent </h3>
      <h3 class="sf orange">de nous</h3>
    </div>
    <div class="testimonials-container">
      {% for testimonial in testimonials %}
        <div class="card">
          <div class="card-image-container">
            <img src="{{ Image(testimonial.custom.profil_picture).src }}" alt="">
          </div>
          <h3 class="blue">{{ testimonial.nom }}</h3>
          <p>{{ testimonial.text }}</p>
        </div>
      {% endfor %}

    </div>
  </div>

</section>
